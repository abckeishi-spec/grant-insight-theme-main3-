{
    "name": "grant-insight/theme",
    "description": "Grant Insight WordPress Theme with AI-optimized architecture",
    "type": "wordpress-theme",
    "license": "MIT",
    "authors": [
        {
            "name": "Grant Insight Team",
            "email": "dev@grant-insight.com"
        }
    ],
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "GrantInsight\\": "src/",
            "GrantInsight\\Components\\": "src/Components/",
            "GrantInsight\\PostTypes\\": "src/PostTypes/",
            "GrantInsight\\Taxonomies\\": "src/Taxonomies/",
            "GrantInsight\\Ajax\\": "src/Ajax/",
            "GrantInsight\\Helpers\\": "src/Helpers/"
        },
        "files": [
            "inc/function/component-loader.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "GrantInsight\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse src --level=5",
        "phpcs": "phpcs src --standard=PSR12",
        "phpcbf": "phpcbf src --standard=PSR12"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}

