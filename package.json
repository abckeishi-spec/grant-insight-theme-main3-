{
  "name": "grant-insight-theme",
  "version": "1.0.0",
  "description": "Grant Insight WordPress Theme - Tailwind CSS Build Process",
  "main": "index.js",
  "scripts": {
    "dev": "tailwindcss -i ./assets/css/main.css -o ./dist/main.css --watch",
    "build": "tailwindcss -i ./assets/css/main.css -o ./dist/main.css --minify",
    "build:dev": "tailwindcss -i ./assets/css/main.css -o ./dist/main.css",
    "clean": "rm -rf dist/*"
  },
  "keywords": [
    "wordpress",
    "theme",
    "tailwindcss",
    "grant-insight"
  ],
  "author": "Grant Insight Team",
  "license": "MIT",
  "devDependencies": {
    "tailwindcss": "^3.4.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10"
  }
}

